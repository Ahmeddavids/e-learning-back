{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", ".eslintrc.js"]
  // "exclude": ["node_modules", "dist"]
}
